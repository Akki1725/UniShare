<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText"
    tools:context=".Activity.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/mainToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurfaceMain"
            android:minHeight="?attr/actionBarSize"
            app:menu="@menu/top_menu"
            app:title="@string/app_name"
            app:titleTextAppearance="@style/TitleAppearance"
            app:titleTextColor="?attr/colorOnSurface" />

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/framer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/navBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"/>

    <TextView
        android:id="@+id/statusBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/listenForCallsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="?attr/colorPrimaryContainer"
        android:contentDescription="Turn On Bluetooth"
        android:focusable="true"
        android:padding="@dimen/_20sdp"
        android:src="@drawable/ic_voice_call"
        android:visibility="gone"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/listenBtn"
        app:layout_constraintEnd_toEndOf="@+id/listenBtn"
        app:maxImageSize="30dp"
        app:tint="?attr/colorOnPrimaryContainer" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/listenBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="?attr/colorPrimaryContainer"
        android:contentDescription="Turn On Bluetooth"
        android:focusable="true"
        android:padding="@dimen/_20sdp"
        android:src="@drawable/ic_not_connected"
        android:visibility="gone"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/enableDiscoveryBtn"
        app:layout_constraintEnd_toEndOf="@+id/enableDiscoveryBtn"
        app:maxImageSize="30dp"
        app:tint="?attr/colorOnPrimaryContainer" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/enableDiscoveryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="?attr/colorPrimaryContainer"
        android:contentDescription="Turn On Bluetooth"
        android:focusable="true"
        android:padding="@dimen/_20sdp"
        android:src="@drawable/ic_discover"
        android:visibility="gone"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/bluetoothBtn"
        app:layout_constraintEnd_toEndOf="@+id/bluetoothBtn"
        app:maxImageSize="30dp"
        app:tint="?attr/colorOnPrimaryContainer" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bluetoothBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="?attr/colorPrimaryContainer"
        android:contentDescription="Turn On Bluetooth"
        android:focusable="true"
        android:padding="@dimen/_20sdp"
        android:src="@drawable/bluetooth_icon"
        android:visibility="gone"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/moreBtn"
        app:layout_constraintEnd_toEndOf="@+id/moreBtn"
        app:maxImageSize="30dp"
        app:tint="?attr/colorOnPrimaryContainer" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/moreBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:contentDescription="Turn On Bluetooth"
        android:padding="@dimen/_20sdp"
        android:src="@drawable/baseline_add_24"
        android:focusable="true"
        android:backgroundTint="?attr/colorSurfaceMain"
        app:tint="?attr/colorOnSurface"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/dialer"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="30dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/dialer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:contentDescription="Dialer"
        android:padding="@dimen/_20sdp"
        android:src="@drawable/dial_pad"
        android:focusable="true"
        android:backgroundTint="?attr/colorPrimary"
        app:tint="?attr/colorOnPrimary"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/navBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="30dp" />

    <TextView
        android:id="@+id/debugWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="16sp"
        android:ellipsize="none"
        android:singleLine="false"
        android:maxWidth="150dp"
        android:layout_margin="20dp"
        android:breakStrategy="simple"
        android:fontFamily="@font/open_sans"
        android:contentDescription="Debug"
        android:text="Connected"
        android:textStyle="bold"
        android:elevation="6dp"
        android:textColor="?attr/colorOnErrorContainer"
        android:background="@drawable/device_container_bg"
        android:backgroundTint="?attr/colorErrorContainer"
        app:layout_constraintBottom_toTopOf="@+id/navBar"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:minHeight="70dp"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>